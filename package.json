{
  "name": "auto-conformance-cli",
  "version": "0.1.0",
  "description": "CLI to automate OpenID conformance suite tests",
  "license": "MIT",
  "main": "dist/index.js",
  "bin": {
    "auto-conformance-cli": "dist/index.js"
  },
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "build:web": "cd web && npm run build",
    "build:all": "npm run build && npm run build:web",
    "start": "node dist/index.js",
    "dev": "ts-node src/index.ts",
    "dev:server": "ts-node src/guiEntry.ts --port=3001",
    "dev:web": "cd web && npx vite",
    "dev:gui": "concurrently \"npm run dev:server\" \"npm run dev:web\"",
    "gui": "npm run build:web && ts-node src/guiEntry.ts",
    "test": "jest"
  },
  "engines": {
    "node": ">=20"
  },
  "dependencies": {
    "commander": "^12.1.0",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "playwright": "^1.50.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.14",
    "@types/node": "^20.12.12",
    "concurrently": "^9.1.2",
    "jest": "^29.7.0",
    "ts-jest": "^29.4.6",
    "ts-node": "^10.9.2",
    "typescript": "^5.6.3"
  }
}